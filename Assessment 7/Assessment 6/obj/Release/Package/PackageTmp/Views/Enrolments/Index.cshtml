@{
    ViewBag.Title = "Enrolments";
}

<h2 style="text-align:center">Enrolment Details</h2><br />

<h2>
    @Html.ActionLink("Create New", "Create")
</h2>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Grade)
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.EnrolmentComplete)*@
            <b>Enrolment Completed</b>
